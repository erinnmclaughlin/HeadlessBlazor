<HBDropdown>
    <HBDropdownOutsideClickBehavior />
    <HBDropdownTrigger class="btn btn-light btn-sm dropdown-toggle">
        @(string.IsNullOrEmpty(CurrentTheme) ? "Select Theme" : CurrentTheme)
    </HBDropdownTrigger>
    <HBDropdownItems>
        <HBDropdownItemButton @onclick="@(() => SetTheme("Bootstrap"))">Bootstrap</HBDropdownItemButton>
        <HBDropdownItemButton @onclick="@(() => SetTheme("Tailwind"))">Tailwind</HBDropdownItemButton>
    </HBDropdownItems>
</HBDropdown>
