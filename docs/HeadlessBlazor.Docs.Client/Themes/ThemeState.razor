@if (ThemeFactory.CurrentTheme == "Bootstrap")
{
    <HeadContent>
        <link rel="stylesheet" href="bootstrap/bootstrap.min.css" />
    </HeadContent>
}
else if (ThemeFactory.CurrentTheme == "Tailwind")
{
    <HeadContent>
        <link rel="stylesheet" href="tailwind.css" />
    </HeadContent>
}

<CascadingValue Value="ThemeFactory">
    <CascadingValue Value="ThemeFactory.GetTheme()">
        @ChildContent
    </CascadingValue>
</CascadingValue>
